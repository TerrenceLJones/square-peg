extends ../shared/template

block content
  table#messageTable
    thead
      th From
      th Content
      th Reply
      th Delete
    tbody
      each message in messages
        tr
          td
            a(href='/users/#{message.fromId}/show')= message.fromName
          td= message.message
          td
            a(href='/messages/new/#{message.fromId}') Reply
          td
            form(method='POST', action='/messages/#{message._id}')
              button X
